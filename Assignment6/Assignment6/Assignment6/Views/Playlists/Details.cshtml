@model Assignment6.Controllers.PlaylistWithTracks

@{
    ViewBag.Title = "Details";
}

<h2>Playlist details @Html.DisplayFor(model => model.Name)</h2>
<hr />

<div class="btn-group">
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }, new { @class = "btn btn-link" })
    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-link" })
</div>
<hr />

<div>
    
    <dl class="dl-horizontal">
        <dt>
            Playlist name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Tracks now on the playlist
            <span class="badge">@Html.DisplayFor(model => model.TracksCount)</span>
        </dt>

        <dd>
         
            @if (Model.Tracks.Count() > 0)
            {
                foreach (var jd in Model.Tracks)
                {
                    <span>@jd.Name</span><br />
                }
            }
            else
            {
              <span>(none) @Model.TracksCount</span>
            }
        </dd>


    </dl>
</div>
<div class="btn-group">
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }, new { @class = "btn btn-link" })
    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-link" })
</div>
